<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <me.jessyan.mvparms.demo.mvp.ui.widget.VerifyEditText
        android:id="@+id/custom_verify_et"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:drawablePadding="10dp"
        android:hint="请输入验证码"
        android:includeFontPadding="false"
        android:textColorHint="@color/color_CBCDD8"
        android:textColor="@color/color_2F3344"
        android:textSize="14sp"
        app:user_ic_delete="@drawable/ic_login_et_delete"

          />


    <!--字体颜色是下划线颜色-->
    <TextView
        android:id="@+id/custom_notice_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"

        android:includeFontPadding="false"



        android:text="ss"

        android:textColor="#AAAAAA"
        android:textSize="14sp" />
</LinearLayout>